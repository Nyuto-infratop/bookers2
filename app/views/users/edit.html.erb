<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
          <% if @user.errors.count >= 2 %>
            <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <% else %>
            <h3>1 error prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f|%>
      <div class = "form-group">
        <%= f.label :name  %>
        <br>
        <%= f.text_field :name,class: "form-control" %>
      </div>  
      <div class = "form-group">
        <%= f.label :profile_image, "Image" %>
        <br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class = "form-group">
        <%= f.label :introduction, "Introduction"%>
        <br>
        <%= f.text_area :introduction ,class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= f.submit "Update User", class: "btn btn-secondary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>